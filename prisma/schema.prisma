datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  username      String?
  lastDayPlayed DateTime @updatedAt
  Games         Games[]
}

model Games {
  id       String @id @default(cuid())
  gameName String
  status   String @default("available")
  gamePath String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}
